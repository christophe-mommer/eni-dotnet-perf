@page "/personnes"

@using MudBlazor

@if (personnes == null)
{
    <div class="d-flex justify-content-center align-items-center h-100">
        <MudProgressCircular Color="Color.Secondary" Style="height:180px;width:180px;" Indeterminate="true" />
    </div>
}
else
{
    if (personnes.Any())
    {
        <table class="table table-sm table-striped">
            <tbody>
                @foreach (var personne in personnes)
                {
                    <tr>
                        <td>@personne.ToString()</td>
                        <td>
                            <button class="btn btn-primary"
                        @onclick="() => AfficherDetails(personne)">
                                Détails
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Aucun contrats trouvés !</p>
    }
}